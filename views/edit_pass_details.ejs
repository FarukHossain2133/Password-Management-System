<%- include('./templates/header.ejs') %>

     <div class="eform">
      <form action="/password_details/edit/<%= record._id %>" method="post">
        <fieldset>
            <legend>Edit Password Details</legend>
            <input type="hidden" value="<%= record._id %>" name="id">
            <% if(success != ''){ %>
                 <p style="text-align: center"> <%= success %></p>
            <% } %>
            <div class="form-group">
                  <label for="pass_details">password category</label>
                  <select name="pass_cate" id="pass_details" class="form-control">
                     <option value="<%= record.password_category %>"> <%= record.password_category %> </option>
                   </select>
            </div>

            <div class="form-group">
                <label for="project">Project Name</label>
                <input type="text" id="project" name="projectName" value="<%= record.project_name %>" placeholder="Enter Your Project Name">
            </div>
        
            <div class="form-group">
                <label for="editor">password Details</label>
                <textarea type="text" id="editor" name="pass_details" placeholder="Enter Your Password Details" rows="5"><%= record.password_details %></textarea>
            </div>
               
              <input class="btn" type="submit" type="button" name="submit" value="Update Password Details">
        </fieldset>
         <p class=""><a href="/view-all-password-list">View All password lists</a></p>
    </form>
    </div>
    <script>
      CKEDITOR.replace( 'editor' );
    </script>

<%- include('./templates/footer.ejs') %>